# Veraawell Video Call Service Environment Configuration
# Copy this file to .env and update the values

# Server Configuration
NODE_ENV=development
VIDEOCALL_PORT=3002
CLIENT_URL=http://localhost:5173

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/veraawell-videocall

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# WebRTC Configuration
# TURN Server Configuration (replace with your own)
TURN_USERNAME=demo-user
TURN_PASSWORD=demo-pass
TURN_SERVER_URL=turn:your-turn-server.com:3478

# Security Configuration
AUDIT_SALT=your-audit-salt-for-hashing-user-ids
AUDIT_SECRET=your-audit-secret-for-integrity-checks

# Logging Configuration
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=30

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=20

# Session Configuration
SESSION_TIMEOUT_MS=3600000
MAX_PARTICIPANTS_PER_ROOM=2
DEFAULT_VIDEO_QUALITY=high

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-password
EMAIL_FROM=noreply@veraawell.com

# Compliance Configuration
HIPAA_COMPLIANCE_ENABLED=true
ENCRYPTION_REQUIRED=true
AUDIT_LOGGING_ENABLED=true

# Performance Configuration
CONNECTION_TIMEOUT_MS=30000
RECONNECT_TIMEOUT_MS=5000
MAX_RECONNECT_ATTEMPTS=5

# Development Configuration
DEBUG_WEBRTC=false
DEBUG_SOCKETS=false
ENABLE_CORS_DEBUG=false
